<div class="mt-4">
  <div class="row">
    {{#each convertCourses as |course|}}
      <div class="col-sm-6 col-lg-4 d-flex align-items-stretch">
        <div class="card" style="width: 18rem;">
          <img src={{course.image}} class="img-fluid img-thumbnail img-center" alt="..." />
          <div class="card-body ">
            <h5 class="card-title">
              {{course.name}}
            </h5>
            <p class="card-text">
              {{course.description}}.
            </p>
            <a href="#" class="btn btn-primary">
              Buy book
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>