<div class="mt-4">
  <div class="row">
    {{#each convertCourses as |course|}}
      <div class="col-sm-6 col-lg-4 d-flex align-items-stretch">
        <div class="card" style="width: 18rem;">
          <a href="/courses/{{course.slug}}">
            <img
              src={{course.image}}
              class="img-fluid img-thumbnail img-center"
              alt="..."
            />
          </a>
          <div class="card-body">
            <a href="/courses/{{course.slug}}">
              <h5 class="card-title">
                {{course.name}}
              </h5>
            </a>
            <p class="card-text">
              {{course.description}}.
            </p>
            <a href="#" class="btn btn-primary">
              Buy book
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>