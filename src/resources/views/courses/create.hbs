<div class="mt-4">
    <h3>Register course</h3>

    <form method="POST" action="/courses/store" class="d-grid gap-3">
        <div class="form-group p-2 bg-light border">
            <label for="name">Name of course</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group p-2 bg-light border">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group p-2 bg-light border">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group p-2 bg-light border">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        
        <button type="submit" class="btn btn-primary p-2 border">Add course</button>
    </form>
</div>